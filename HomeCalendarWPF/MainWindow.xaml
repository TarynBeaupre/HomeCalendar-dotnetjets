<Window x:Class="HomeCalendarWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCalendarWPF"
        mc:Ignorable="d"
        FontFamily="Verdana"
        Title="MainWindow" Height="500" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="RessourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="images/stardew-backdrop.jpg"></ImageBrush>
    </Window.Background>

    <Grid Margin="20" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border Margin="10" BorderBrush="White" BorderThickness="5" Opacity="1">
            <StackPanel Opacity="0.9" Grid.Column="0" Grid.RowSpan="2">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD0EFFF"/>
                        <GradientStop Color="#FF91E8AA" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <!--Title-->
                <TextBlock FontSize="24">Home Calendar</TextBlock>
                <!--Stardew stardrop image-->
                <Image Width="50">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="300" UriSource="images/stardew-star.png" />
                    </Image.Source>
                </Image>
                <Separator></Separator>

                <!--Calendar edit-->
                <StackPanel Margin="10">
                    <Label FontWeight="Bold">Edit Calendar</Label>
                    <TextBlock>path:</TextBlock>
                    <TextBlock Name="calendarFiletxb" Background="LightGray" FontSize="10" TextWrapping="WrapWithOverflow">path here</TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Margin="15" Click="Btn_Click_NewDBFile" Style="{StaticResource button}">New File</Button>
                        <Button Margin="15" Click="Btn_Click_OpenDBFile" Style="{StaticResource button}" >Open File</Button>
                    </StackPanel>
                </StackPanel>
                <Separator></Separator>

                <!--Event edit-->
                <StackPanel Margin="10">
                    <Label FontWeight="Bold">Edit Events</Label>
                    <TextBlock>Add a new event</TextBlock>
                    <Button Style="{StaticResource button}" Margin="10" Click="OpenEvent">Add Event</Button>
                </StackPanel>
                <Separator></Separator>
                <!--Colour themes-->
                <StackPanel Margin="10">
                    <Label FontWeight="Bold">Change color theme</Label>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Margin="10" Width="60" Click="Btn_Click_Change_Theme" Background="LightGreen" Style="{StaticResource button}" >Default</Button>
                        <Button Margin="10" Width="60" Click="Btn_Click_Change_Theme" Background="White" Style="{StaticResource button}">Light</Button>
                        <Button Margin="10" Width="60" Click="Btn_Click_Change_Theme" Background="Gray" Style="{StaticResource button}">Dark</Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        <Image Grid.Column="1" Margin="390,175,0,0" MinWidth="100">
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="images/stardew-tree.png" />
            </Image.Source>
        </Image>
        <Viewbox HorizontalAlignment="Left" Grid.Column="1">
            <Calendar Opacity="0.9" >
                <Calendar.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD0EFFF"/>
                        <GradientStop Color="#FF91E8AA" Offset="1"/>
                    </LinearGradientBrush>
                </Calendar.Background>
            </Calendar>
        </Viewbox>

    </Grid>
</Window>
