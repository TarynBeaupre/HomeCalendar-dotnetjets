<Window x:Class="HomeCalendarWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCalendarWPF"
        mc:Ignorable="d"
        FontFamily="Verdana"
        Title="MainWindow" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="images/stardew-backdrop.jpg"></ImageBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border Margin="10" BorderBrush="White" BorderThickness="5" Opacity="1">
            <StackPanel VerticalAlignment="Top" Opacity="0.85" Height="419">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFD0EFFF"/>
                        <GradientStop Color="#FF91E8AA" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <!--Title-->
                <TextBlock FontSize="24">Home Calendar</TextBlock>
                <!--Stardew stardrop image-->
                <Image Width="50">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="300" UriSource="images/stardew-star.png" />
                    </Image.Source>
                </Image>
                
                <!--Calendar edit-->
                <StackPanel Margin="10, 20, 10, 20">
                    <Label FontWeight="Bold">Edit Calendar</Label>
                    <TextBlock>path:</TextBlock>
                    <TextBlock Name="calendarFiletxb" Background="LightGray" FontSize="10">path here</TextBlock>
                    <Button Margin="20" Width="100" Click="Btn_OpenFileExplorer">change path</Button>
                </StackPanel>

                <!--Event edit-->
                <StackPanel Margin="10, 20, 10, 20">
                    <Label FontWeight="Bold">Edit Events</Label>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                       <TextBlock>Add a new event</TextBlock>
                        <Button Margin="10, 0, 0, 0" Height="20" Width="100" Click="OpenEvent">Add Event</Button> 
                    </StackPanel>
                </StackPanel>
                
                <!--Colour themes-->
                <StackPanel Margin="10, 20, 10, 20">
                    <Label FontWeight="Bold">Change color theme</Label>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Margin="10" Width="60" Height="20" Click="Btn_Click_Change_Theme" Background="LightGreen" >Default</Button>
                        <Button Margin="10" Width="60" Height="20" Click="Btn_Click_Change_Theme" Background="White">Light</Button>
                        <Button Margin="10" Width="60" Click="Btn_Click_Change_Theme" Background="Gray">Dark</Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
        <Image Grid.Column="1" Margin="390,175,0,0">
            <Image.Source>
                <BitmapImage DecodePixelWidth="300" UriSource="images/stardew-tree.png" />
            </Image.Source>
        </Image>
        <Viewbox HorizontalAlignment="Left" Margin="10" Grid.Column="1">
            <Calendar Background="#DDFADA" Opacity="0.85" />
        </Viewbox>

    </Grid>
</Window>
